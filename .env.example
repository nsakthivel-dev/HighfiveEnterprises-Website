# ========================================
# Supabase Configuration
# ========================================
# Get these values from your Supabase project settings
# https://supabase.com/

VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Server-side Supabase credentials (for Node.js/API routes)
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ========================================
# Server Configuration
# ========================================
# Port to run the server on (Render will set this automatically)
# Default is 5000 for local development
PORT=5000
HOST=0.0.0.0

# Node environment
NODE_ENV=production

# ========================================
# Optional: OpenAI Configuration (if using chatbot)
# ========================================
OPENAI_API_KEY=your_openai_api_key_here

# ========================================
# Optional: Database Configuration (if using custom database)
# ========================================
DATABASE_URL=your_database_connection_string_here

# ========================================
# Application Settings
# ========================================
# Set to true if you want to enable debug logging
DEBUG=false

# Your application's frontend URL (for CORS if needed)
VITE_APP_URL=https://your-domain.onrender.com
